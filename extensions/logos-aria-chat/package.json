{
  "name": "logos-aria-chat",
  "displayName": "Logos ARIA Chat",
  "description": "ARIA multi-agent conversation panel with Cursor-style mode switching and file attachments",
  "version": "2.0.0",
  "publisher": "deepcreative",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other", "Chat"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "logos-aria",
          "title": "ARIA Chat",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "logos-aria": [
        {
          "type": "webview",
          "id": "logos.ariaChat",
          "name": "ARIA",
          "contextualTitle": "ARIA Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "logos.newChat",
        "title": "New Chat",
        "icon": "$(add)"
      },
      {
        "command": "logos.clearChat",
        "title": "Clear Chat",
        "icon": "$(trash)"
      },
      {
        "command": "logos.switchMode",
        "title": "Switch ARIA Mode",
        "icon": "$(symbol-enum)"
      },
      {
        "command": "logos.exportConversations",
        "title": "Export ARIA Conversations",
        "icon": "$(export)"
      },
      {
        "command": "logos.importConversations",
        "title": "Import ARIA Conversations",
        "icon": "$(import)"
      }
    ],
    "keybindings": [
      {
        "command": "logos.newChat",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n",
        "when": "view == logos.ariaChat"
      },
      {
        "command": "logos.switchMode",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "view == logos.ariaChat"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "logos.newChat",
          "when": "view == logos.ariaChat",
          "group": "navigation"
        },
        {
          "command": "logos.clearChat",
          "when": "view == logos.ariaChat",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "ARIA Chat",
      "properties": {
        "logos.aria.gatewayEndpoint": {
          "type": "string",
          "default": "http://localhost:8085",
          "description": "ARIA Gateway endpoint for API requests"
        },
        "logos.aria.carouselEndpoint": {
          "type": "string",
          "default": "http://localhost:8082",
          "description": "Carousel RAG service endpoint for file storage"
        },
        "logos.aria.defaultModel": {
          "type": "string",
          "default": "aria-01",
          "description": "Default ARIA model for conversations"
        },
        "logos.aria.defaultMode": {
          "type": "string",
          "enum": ["agent", "ask", "plan", "debug", "research", "code-review"],
          "default": "agent",
          "description": "Default conversation mode"
        },
        "logos.aria.maxAttachmentSize": {
          "type": "number",
          "default": 10485760,
          "description": "Maximum attachment file size in bytes (default: 10MB)"
        },
        "logos.aria.allowedFileTypes": {
          "type": "array",
          "default": [
            ".pdf", ".txt", ".md", ".json", ".yaml", ".yml",
            ".ts", ".tsx", ".js", ".jsx", ".py", ".go", ".rs", ".java",
            ".html", ".css", ".scss", ".xml",
            ".png", ".jpg", ".jpeg", ".gif", ".webp", ".svg",
            ".doc", ".docx", ".xls", ".xlsx", ".pptx"
          ],
          "description": "Allowed file types for attachments"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run compile"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}


